{
    "name": "radiergummi/wander",
    "version": "1.0.0",
    "description": "A PHP client for the modern world",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Moritz Friedrich",
            "email": "m@9dev.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Radiergummi\\Wander\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Radiergummi\\Wander\\Tests\\Unit\\": "tests/unit",
            "Radiergummi\\Wander\\Tests\\Integration\\": "tests/integration"
        }
    },
    "require": {
        "php": ">=7.4",
        "nyholm/psr7": "^1.3",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "nyholm/psr7-server": "^1.0",
        "phpunit/phpunit": "^9.3",
        "symfony/process": "^5.1",
        "vimeo/psalm": "^3.14",
        "zendframework/zend-httphandlerrunner": "^1.1"
    },
    "scripts": {
        "post-install-cmd": [
            "./scripts/fetch_phpdoc.sh"
        ],
        "test": "phpunit -c phpunit.xml",
        "static-analysis": "psalm --output-format=compact --no-progress --threads=$(nproc)"
    }
}
